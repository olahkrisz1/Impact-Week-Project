<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MM Community</title>
    <link rel="stylesheet" href="/public/longin-logout-style/style.css">
    <script defer src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
   <script defer src="/public/longin-logout-style/script.js"></script>
</head>

<body>
    <nav>
        <h1><a href="/">Matrix Master Community</a></h1>
        <ul>
            <% if (userId) { %>
                <li>Welcome, <%= userMail %>
                </li>
                <li><a href="/logout">Log out</a></li>
                <% } else { %>
                    <li>
                        <p>If you are not a member yet, please sign up first!</p>
                    </li>
                    <li><a href="/login">Log in</a></li>
                    <li><a href="/signup" class="btn">Sign up</a></li>
                    <% } %>
        </ul>
    </nav>
</body>
</html>